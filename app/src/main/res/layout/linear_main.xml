<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wellcome_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="182px"
        android:layout_marginLeft="76px"
        android:layout_marginRight="76px"
        android:layout_marginTop="570px"
        android:background="@drawable/background_"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mPsUsername"
                android:layout_width="wrap_content"
                android:layout_marginTop="26px"
                android:layout_marginLeft="28px"
                android:layout_marginBottom="26px"
                android:layout_marginRight="28px"
                android:layout_height="wrap_content"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/user" />

            <EditText
                android:id="@+id/mUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="请输入账号、手机号"
                android:textColorHint="#a8b4c4"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@null" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#D8DDE6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mPsPassword"
                android:layout_width="wrap_content"
                android:layout_marginTop="26px"
                android:layout_marginLeft="32px"
                android:layout_marginBottom="26px"
                android:layout_marginRight="28px"
                android:layout_height="wrap_content"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/password2" />

            <EditText
                android:id="@+id/mPassWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="请输入登录密码"
                android:textColorHint="#a8b4c4"
                android:ems="10"
                android:background="@null"
                android:inputType="textPassword" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="76px"
            android:layout_marginTop="36px"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/mAutoLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-7dp"
                android:layout_marginTop="-7dp" />

            <TextView
                android:id="@+id/mAutoLoginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-6dp"
                android:text="自动登录"
                android:textColor="#ffffff"
                android:textSize="32px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="76px"
            android:layout_marginTop="36px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mHintMima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:textColor="#ffffff"
                android:textSize="32px" />
        </LinearLayout>


    </FrameLayout>
    <Button
        android:id="@+id/mLogin"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/login_bg"
        android:layout_marginLeft="76px"
        android:layout_marginRight="76px"
        android:textSize="34px"
        android:textColor="#ffffff"
        android:text="登录" />
    <TextView
        android:id="@+id/mHintZhuce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36px"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="32px"
        android:text="还没有账号？ 立即注册" />
</LinearLayout>