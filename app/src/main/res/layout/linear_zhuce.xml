<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@mipmap/bg64">

        <ImageView
            android:id="@+id/mZhuCeReturn"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/left_icon" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="用户注册"
            android:textColor="#ffffff"
            android:textSize="40px" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="364px"
        android:layout_marginLeft="76px"
        android:layout_marginRight="76px"
        android:layout_marginTop="50px"
        android:background="@drawable/background_"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mPsUsername"
                android:layout_width="wrap_content"
                android:layout_marginTop="26px"
                android:layout_marginLeft="28px"
                android:layout_marginBottom="26px"
                android:layout_marginRight="28px"
                android:layout_height="wrap_content"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/user" />

            <EditText
                android:id="@+id/mUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="请输入账号"
                android:textColorHint="#a8b4c4"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@null" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#D8DDE6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mPsPassword"
                android:layout_width="wrap_content"
                android:layout_marginTop="26px"
                android:layout_marginLeft="32px"
                android:layout_marginBottom="26px"
                android:layout_marginRight="28px"
                android:layout_height="wrap_content"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/password2" />

            <EditText
                android:id="@+id/mPassWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="请输入登录密码"
                android:textColorHint="#a8b4c4"
                android:ems="10"
                android:background="@null"
                android:inputType="textPassword" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#D8DDE6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mPsPasswordOk"
                android:layout_width="wrap_content"
                android:layout_marginTop="26px"
                android:layout_marginLeft="32px"
                android:layout_marginBottom="26px"
                android:layout_marginRight="28px"
                android:layout_height="wrap_content"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/password2" />
            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="请重新输入登录密码"
                android:textColorHint="#a8b4c4"
                android:ems="10"
                android:background="@null"
                android:inputType="textPassword" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#D8DDE6" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mNoPhoneImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="26px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="28px"
                android:layout_marginTop="26px"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@mipmap/phone" />

            <EditText
                android:id="@+id/mNoPhoneText"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:ems="10"
                android:hint="请输入手机号"
                android:inputType="number"
                android:textColorHint="#a8b4c4" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/mZhuCeAfter"
        android:layout_width="match_parent"
        android:layout_marginLeft="76px"
        android:layout_marginRight="76px"
        android:layout_height="90px"
        android:layout_marginTop="80px"
        android:background="@drawable/login_bg"
        android:textSize="34px"
        android:textColor="#ffffff"
        android:text="下一步" />
</LinearLayout>